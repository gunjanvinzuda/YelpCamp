<%- include ('../partials/header') %>
<div class="container">
	<h1 class="text-center" style="margin-top: 50px">Add New Comment to <%= campground.name %></h1>
	<div style="width: 30%; margin: 50px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">				
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" placeholder="Your Comment"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit</button>
				</div>					
			</form>
		<a href="/campgrounds/<%= campground._id %>" class="btn btn-lg btn-light btn-block">Go Bcak</a>
	</div>
</div>

<%- include ('../partials/footer') %> 